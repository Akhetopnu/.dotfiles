#bindsym $mod+d exec rofi -show run -lines 5 -eh 2 -width 100 -padding 400 -opacity "55" -bw 0 -bc "$bc-color" -bg "$bg-color" -fg "$text-color" -hlbg "$bg-color" -hlfg "#9575CD" -font "System San Francisco Display 15"

bindsym $mod+Print exec scrot -s ~/Pictures/Screenshots/$(date +%d-%m-%Y_%T).png

# Switch to another window
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move current window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Split window horizontally/vertically | FULLSCREEN
